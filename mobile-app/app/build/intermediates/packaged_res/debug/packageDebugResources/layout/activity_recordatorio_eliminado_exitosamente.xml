<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:gravity="center">

    <!-- Check icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_check_circle"
        android:layout_marginBottom="24dp" />

    <!-- Success title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Recordatorio eliminado!"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Success message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El recordatorio ha sido eliminado exitosamente:"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="12dp"
        android:gravity="center" />

    <!-- Deleted reminder title -->
    <TextView
        android:id="@+id/deleted_reminder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título del recordatorio"
        android:textSize="18sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:background="#F5F5F5"
        android:padding="12dp" />

    <!-- Back button -->
    <Button
        android:id="@+id/btn_volver"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Volver a Recordatorios"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#4A90E2"
        android:layout_marginTop="24dp" />

</LinearLayout>