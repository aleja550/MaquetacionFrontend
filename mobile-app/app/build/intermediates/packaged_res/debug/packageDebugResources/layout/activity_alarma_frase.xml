<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF3E0">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF9800"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALARMA ACTIVA"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Reminder Info -->
        <TextView
            android:id="@+id/tv_titulo_recordatorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomar LosartÃ¡n 50mg"
            android:textColor="#333333"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_hora_recordatorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00 AM"
            android:textColor="#666666"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â— Salud ðŸ’Š"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <!-- Phrase Challenge Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/phrase_challenge_background"
            android:padding="20dp"
            android:layout_marginBottom="32dp">

            <!-- Instructions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="âœï¸"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ESCRIBE EXACTAMENTE:"
                    android:textColor="#FF9800"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Target Phrase -->
            <TextView
                android:id="@+id/tv_frase_objetivo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Hoy voy a lograr mis metas"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:background="@drawable/target_phrase_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp" />

            <!-- Input Field -->
            <EditText
                android:id="@+id/et_frase_usuario"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_field_background"
                android:hint="Escribe aquÃ­..."
                android:textColorHint="#999999"
                android:textColor="#333333"
                android:textSize="16sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="text"
                android:layout_marginBottom="8dp" />

            <!-- Character Counter -->
            <TextView
                android:id="@+id/tv_contador_caracteres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/30 caracteres"
                android:textColor="#999999"
                android:textSize="12sp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btn_confirmar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="CONFIRMAR"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/confirm_button_background"
        android:layout_margin="16dp" />

</LinearLayout>