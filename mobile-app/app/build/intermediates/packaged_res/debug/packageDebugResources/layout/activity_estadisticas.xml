<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".EstadisticasActivity">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#2563EB"
            android:paddingTop="44dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#FFFFFF"
                android:layout_marginEnd="16dp" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ESTADÍSTICAS"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginEnd="40dp" />

        </LinearLayout>

        <!-- Content ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Métricas Principales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="2dp">

                    <!-- Recordatorios -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recordatorios"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completados"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="125"
                            android:textColor="#4CAF50"
                            android:textSize="32sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Desafíos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desafíos"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Resueltos"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80"
                            android:textColor="#2563EB"
                            android:textSize="32sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Gráfico de Actividad Semanal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actividad Semanal"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="20dp" />

                    <!-- Chart Container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:layout_marginBottom="8dp">

                        <!-- Lun -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:layout_marginEnd="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="#2563EB" />

                        </LinearLayout>

                        <!-- Mar -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:layout_marginEnd="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:background="#2563EB" />

                        </LinearLayout>

                        <!-- Mié -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:layout_marginEnd="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="#2563EB" />

                        </LinearLayout>

                        <!-- Jue -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:layout_marginEnd="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="85dp"
                                android:background="#2563EB" />

                        </LinearLayout>

                        <!-- Vie -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:layout_marginEnd="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:background="#2563EB" />

                        </LinearLayout>

                        <!-- Sáb -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom"
                            android:layout_marginEnd="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:background="#2563EB" />

                        </LinearLayout>

                        <!-- Dom -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="bottom">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:background="#2563EB" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Chart Labels -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lun"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mar"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mié"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jue"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Vie"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sáb"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dom"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Sección de Categorías -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categorías"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <!-- Salud -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="#4CAF50"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salud"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20 Recordatorios"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 Completados"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Trabajo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="#FF9800"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trabajo"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="35 Recordatorios"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 Completados"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Estudios -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="#9C27B0"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estudios"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50 Recordatorios"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 Completados"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>