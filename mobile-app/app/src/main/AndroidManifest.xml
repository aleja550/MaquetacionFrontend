<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.remindmeplus.app">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:targetApi="31">

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeScreenActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".GestionarRecordatoriosActivity"
            android:exported="false"
            android:parentActivityName=".HomeScreenActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".NuevoRecordatorioActivity"
            android:exported="false"
            android:parentActivityName=".GestionarRecordatoriosActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".RecordatorioCreadoExitosamenteActivity"
            android:exported="false"
            android:parentActivityName=".GestionarRecordatoriosActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".RecordatorioEliminadoExitosamenteActivity"
            android:exported="false"
            android:parentActivityName=".GestionarRecordatoriosActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".GestionarCategoriasActivity"
            android:exported="false"
            android:parentActivityName=".HomeScreenActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".NuevaCategoriaActivity"
            android:exported="false"
            android:parentActivityName=".GestionarCategoriasActivity" />

                <activity
            android:name=".AlarmaDesafioMatematicoActivity"
            android:exported="false"
            android:parentActivityName=".HomeScreenActivity"
            android:theme="@style/AppTheme.FullScreen" />

        <activity
            android:name=".ConfiguracionActivity"
            android:exported="false"
            android:parentActivityName=".HomeScreenActivity" />

        <activity
            android:name=".EstadisticasActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:parentActivityName=".HomeScreenActivity" />

        <activity
            android:name=".AyudaActivity"
            android:exported="false"
            android:parentActivityName=".HomeScreenActivity" />

    </application>

</manifest>