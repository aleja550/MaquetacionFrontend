<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4285F4"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/white"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NUEVA CATEGORÍA"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE"
                android:textColor="#333333"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#F44336"
                android:textSize="12sp"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="50dp" />

            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="Entretenimiento"
                android:textColorHint="#9E9E9E"
                android:textColor="#333333"
                android:textSize="16sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="text"
                android:layout_marginBottom="24dp" />

            <!-- Iconos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ICONO"
                android:textColor="#333333"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <!-- Primera fila de iconos -->
            <LinearLayout
                android:id="@+id/iconos_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="24dp">
                
                <!-- Los iconos se agregarán dinámicamente -->

            </LinearLayout>

            <!-- Colores -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COLOR"
                android:textColor="#333333"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/colores_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="24dp">
                
                <!-- Los colores se agregarán dinámicamente -->

            </LinearLayout>

            <!-- Sonido -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SONIDO"
                android:textColor="#333333"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/sound_selector_background"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_music"
                    android:tint="#666666"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Canción relajante.mp3"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_play_circle"
                    android:tint="#F97316"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_stop_circle"
                    android:tint="#FFA500" />

            </LinearLayout>

            <!-- Vibración -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIBRACIÓN"
                android:textColor="#333333"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/vibracion_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <RadioButton
                    android:id="@+id/rb_suave"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Suave (3 pulsos cortos)"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:background="@drawable/vibration_option_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rb_normal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Normal (5 pulsos)"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:background="@drawable/vibration_option_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/rb_energetica"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Energética (pulsos intensos)"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:background="@drawable/vibration_option_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </RadioGroup>

        </LinearLayout>

    </ScrollView>

    <!-- Botón Crear -->
    <Button
        android:id="@+id/btn_crear_categoria"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="CREAR CATEGORÍA"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/create_button_background"
        android:layout_margin="16dp" />

</LinearLayout>