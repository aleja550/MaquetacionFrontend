<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF3E0">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF9800"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALARMA ACTIVA"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Reminder Info -->
        <TextView
            android:id="@+id/tv_titulo_recordatorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudiar UX Research"
            android:textColor="#333333"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_hora_recordatorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:00 AM"
            android:textColor="#666666"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● ESTUDIOS"
            android:textColor="#9C27B0"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <!-- Math Challenge Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/math_challenge_background"
            android:padding="24dp"
            android:layout_marginBottom="32dp">

            <!-- Instructions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESUELVE PARA CONFIRMAR"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- Math Operation -->
            <TextView
                android:id="@+id/tv_operacion_matematica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="47 + 23 = ?"
                android:textColor="#333333"
                android:textSize="32sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Answer Input Field -->
            <EditText
                android:id="@+id/et_respuesta_usuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/math_input_background"
                android:hint="Tu respuesta..."
                android:textColorHint="#999999"
                android:textColor="#333333"
                android:textSize="24sp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="5" />

        </LinearLayout>

    </LinearLayout>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btn_confirmar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="CONFIRMAR"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/confirm_button_background"
        android:layout_margin="16dp" />

</LinearLayout>