<!-- Navigation Drawer -->
<LinearLayout
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <include layout="@layout/nav_header" />

    <!-- Menu Items -->
    <LinearLayout
