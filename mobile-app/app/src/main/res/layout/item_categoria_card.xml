<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/reminder_card_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <View
        android:id="@+id/color_indicator"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="#10B981"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salud ðŸ’Š"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:background="@drawable/category_chip_salud"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_category_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relajante â€¢ Suave"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_reminders_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 recordatorios activos"
            android:textColor="#999999"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_edit_category"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:tint="#666666"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/btn_delete_category"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_delete"
            android:tint="#F44336"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>