<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4285F4"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CATEGORÍA CREADA"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Success Icon -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/success_circle_background" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_check"
                    android:tint="@android:color/white"
                    android:layout_gravity="center" />

            </FrameLayout>

            <!-- Success Message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Categoría creada\nexitosamente!"
                android:textColor="#333333"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu categoría ha sido programada y te\nnotificaremos en el momento indicado"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Category Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/category_info_card_background"
                android:padding="20dp"
                android:layout_marginBottom="32dp">

                <!-- Category Name -->
                <TextView
                    android:id="@+id/tv_nombre_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ENTRETENIMIENTO"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Icon Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tv_icono_categoria"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="🎯"
                        android:textSize="18sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Icono"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Color Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:id="@+id/view_color_categoria"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="#10B981"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Sound -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sonido: Relajante"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Vibration -->
                <TextView
                    android:id="@+id/tv_vibracion_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vibración: Suave"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Spacer para empujar botones hacia abajo -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_ver_categorias"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="VER MIS CATEGORÍAS"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/create_button_background"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_crear_otra"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CREAR OTRA CATEGORÍA"
            android:textColor="#4285F4"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/secondary_button_background" />

    </LinearLayout>

</LinearLayout>